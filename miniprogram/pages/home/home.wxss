/* tabs */
.tabs {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}

.tab {
  margin-right: 30rpx;
}

.active {
  font-size: 40rpx;
  font-weight: bold;
  border-bottom: 5rpx solid #07c160;
}

/* todo 列表 */
.todo {
  display: flex;
  align-items: center;
  padding: 20rpx;
}

.had-done-tips {
  background: #fce5dd;
  color: #888;
  padding-left: 30rpx;
  font-size: 30rpx;
}

.done {
  text-decoration-line: line-through;
  color: #ccc;
}

/* 添加新todo */
.add-icon-wrap {
  width: 120rpx;
  height: 120rpx;
  box-sizing: border-box;
  position: fixed;
  right: 0rpx;
  bottom: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  right: 30rpx;
  bottom: 100rpx;
  border-radius: 60rpx;
  background: #fff;
  box-shadow: 0 5rpx 20rpx 10rpx #ddd;
}

.add-icon {
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
  box-sizing: border-box;
}